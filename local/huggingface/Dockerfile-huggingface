FROM nvidia/cuda:12.1.1-base-ubuntu22.04

# Set environment variables
ENV PYTHONDONTWRITEBYTECODE 1
ENV PYTHONUNBUFFERED 1

# Install system dependencies
ENV DEBIAN_FRONTEND=noninteractive
RUN apt-get update && apt-get install -y software-properties-common

RUN add-apt-repository ppa:deadsnakes/ppa
RUN apt-get update && apt-get install -y python3.12 python3.12-venv git

# Create a virtual environment and activate it
RUN python3.12 -m venv /opt/venv
ENV PATH="/opt/venv/bin:$PATH"

# Upgrade pip and install poetry
RUN pip install --upgrade pip poetry

# Set the working directory
WORKDIR /app

# Install dependencies from poetry
COPY ./huggingface/pyproject.toml /app/
RUN . /opt/venv/bin/activate && poetry install

RUN git clone https://github.com/PanQiWei/AutoGPTQ.git && cd AutoGPTQ;
RUN pip install -vvv -e .; cd ..

# Run Flask
ENTRYPOINT ["python3", "-m", "llm_bench_hf.server", "--port=5000"]

FROM ubuntu:22.04

# Set environment variables
ENV PYTHONDONTWRITEBYTECODE 1
ENV PYTHONUNBUFFERED 1
# ENV GOOGLE_APPLICATION_CREDENTIALS=/service-account.json

# Set up GCloud SDK
# RUN curl -sSL https://sdk.cloud.google.com | bash

# Install system dependencies
RUN apt-get update && \
    apt-get install -y \
        git \
        python3-pip \
        curl

# Install api stuff
RUN pip3 install pymongo pynvml flask pytz fastapi uvicorn httpx typer gunicorn tenacity filelock huggingface_hub

# Install cloud providers
RUN pip3 install boto3 google-cloud-aiplatform openai tiktoken anthropic groq

# Set the working directory
WORKDIR /app

# Copy over repo code
COPY . /app

# Add health check
HEALTHCHECK --interval=30s --timeout=10s --start-period=30s --retries=3 \
  CMD curl -f http://localhost:${FASTAPI_PORT_CLOUD}/health || exit 1

# Set the entrypoint
CMD ["sh", "-c", "gunicorn -w 8 -k uvicorn.workers.UvicornWorker llm_bench.cloud.server:app --bind 0.0.0.0:${FASTAPI_PORT_CLOUD}"]